{
    "name": "jwalton-logger",
    "version": "1.0.0",
    "description": "Structured logging example using winston.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "test": "npm run build && npm run lint && npm run test:unittest",
        "test:pre-commit": "npm run build && lint-staged && npm run precommit:unittest",
        "build": "tsc",
        "clean": "rm -rf dist types coverage",
        "test:unittest": "tsc -p test && nyc mocha 'test/**/*.@(ts|tsx|js|jsx)'",
        "precommit:unittest": "tsc -p test && mocha --reporter progress 'test/**/*.@(ts|tsx|js|jsx)'",
        "lint": "npm run lint:source && npm run lint:tests",
        "lint:source": "eslint --ext .ts --ext .tsx src",
        "lint:tests": "eslint --ext .ts --ext .tsx test",
        "prepare": "npm run build",
        "prepublishOnly": "npm run build && npm test",
        "semantic-release": "semantic-release",
        "start": "npm run build && node ./dist/index.js"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --ext ts --ext tsx"
        ],
        "test/**/*.ts": [
            "eslint --ext ts --ext tsx"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jwalton/jwalton-logger.git"
    },
    "keywords": [
        "logging",
        "winston"
    ],
    "author": {
        "name": "Jason Walton",
        "email": "dev@lucid.thedreaming.org",
        "url": "https://thedreaming.org"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/exegesis-js/jwalton/jwalton-logger/issues"
    },
    "homepage": "https://github.com/jwalton/jwalton-logger#readme",
    "devDependencies": {
        "@types/chai": "^4.2.11",
        "@types/express": "^4.17.6",
        "@types/lodash": "^4.14.157",
        "@types/mocha": "^7.0.2",
        "@types/node": "^12.0.0",
        "@types/on-finished": "^2.3.1",
        "@typescript-eslint/eslint-plugin": "^3.4.0",
        "@typescript-eslint/parser": "^3.4.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "coveralls": "^3.1.0",
        "eslint": "^7.3.1",
        "eslint-config-prettier": "^6.11.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "mocha": "^8.0.1",
        "nyc": "^15.1.0",
        "prettier": "^2.0.5",
        "pretty-quick": "^2.0.1",
        "semantic-release": "^17.1.0",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && npm run test:pre-commit"
        }
    },
    "dependencies": {
        "colors": "^1.4.0",
        "express": "^4.17.1",
        "lodash": "^4.17.15",
        "on-finished": "^2.3.0",
        "winston": "^3.3.3",
        "winston-elasticsearch": "^0.9.0",
        "winston-format-debug": "^1.0.3"
    }
}
